<%= link_to 'New Stock', new_stock_path %>
<br/>

<table class="table table-bordered table-hover" data-toggle="table" data-search="true" >
  <thead class="thead-dark">
    <tr>
      <th data-sortable="true" data-field="company">Company</th>
      <th data-sortable="true" data-field="symbol">Ticker</th>
      <th data-sortable="true" data-field="quote">Quote $</th>
      <th data-sortable="true" data-field="target">Target $</th>
      <th data-sortable="true" data-field="gaptotarget">Gap to Target %</th>
      <th data-sortable="true" data-field="buy_rating">Buy %</th>
      
      
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <% if current_user.id==stock.user_id %>

        <% begin %>
          <% @ticker = StockQuote::Stock.quote(stock.ticker) %>
          
          
          <tr>
                <td><%= link_to @ticker.company_name, stock %></td>
                <td><%= @ticker.symbol %></td>
                <td><%= number_with_precision(@ticker.latest_price, :precision => 2) %></td>
                <td><%= stock.target_price_auto %></td>
                <td><%= number_with_precision(100 * ((stock.target_price_auto.to_f - @ticker.latest_price.to_f)/@ticker.latest_price.to_f),  :precision => 2) %></td>


                <% reco = Array[] %>
                <% buy_rating = 0 %>
                <% reco = @recommendations.select{ |r| r['symbol']==@ticker.symbol } %>
                
                <% if !reco.empty? %>
                  <td><%=(100 * ( ((reco[0]["buy"]) +  (reco[0]["strongbuy"])) / ( (reco[0]["buy"]) +  (reco[0]["strongbuy"]) +   (reco[0]["sell"]) +  (reco[0]["strongsell"]) +  (reco[0]["hold"]) ) )).round(1) %></td>
                <% else %>
                  <td>0.0</td>
                <% end %>


                
                


          </tr>
        <% rescue RuntimeError %>
              <tr>
                <td><%= link_to "Error: Incorrect Symbol", stock %></td>
                <td><%= stock.ticker %></td>
                
                <td>N/A</td>
                <td>N/A</td>
                <td>N/A</td>
                <td>N/A</td>
                
                

              </tr>
        <% rescue Errno::ETIMEDOUT, NoMethodError %>
              <tr>
                <td><%= link_to "Error: Quote unavailable", stock %></td>
                <td><%= stock.ticker %></td>
                
                <td>N/A</td>
                <td>N/A</td>
                <td>N/A</td>
                <td>N/A</td>
                
                

              </tr>
        <% else %>
           
        <% ensure %>
           
        <% end %>
        
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stock', new_stock_path %>
